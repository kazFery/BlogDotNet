@page
@model BlogWebApp.Pages.post.PostCommentsModel
@{
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Comment List</h2>
		</div>
		
	</div>
	<br /><br />

	<table id="tblData" class="table table-light thead-dark table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>CommentId</th>
				<th>Body</th>
				<th>Posted Date</th>
				<th>Author</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in @Model.PostVM.CommentList)
			{
				<tr>
					<td width="10%"> @obj.Id</td>
					<td width="20%">  @Html.Raw(@obj.Body)</td>
					<td width="30%"> @obj.CreationTime</td>
					<td width="30%"> @obj.ApplicationUser.FullName</td>
					<td>
						<div class="w-75 btn-group" role="group">						
							<a asp-page="/Comment/Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"> <i class="bg-info bi-trash3-fill"> </i> </a>
						</div>

					</td>
				</tr>
			}
		</tbody>

	</table>
</div>

