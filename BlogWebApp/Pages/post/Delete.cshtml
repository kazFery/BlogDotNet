@page
@model BlogWebApp.Pages.post.DeleteModel
@{
}

<form method="post" enctype="multipart/form-data">
	<input asp-for="Post.Id" hidden />

	<div class="row">
		<div class="col-10">
			<div class="border p-3 mt-4 row">
				<div class="col-12 pb-2">
					<h2 class="text-primary"> Delete </h2>

					<hr />
				</div>
			</div>
		</div>
		<div class="mb-3">
			<label asp-for="Post.Title"></label>
			<input asp-for="Post.Title"  disable class="form-control" />
			
			<label asp-for="Post.Body"></label>
			<textarea asp-for="Post.Body" rows="3" disable class="form-control"></textarea>
			<input asp-for="Post.CreationTime" disable type="hidden" class="form-control" />
			
			<div class="mb-3">
				<label asp-for="Post.ImageUrl"></label>
				<img src="@Model.Post.ImageUrl" width="100"/>
			</div>

			<div class="col-12">
				
			<button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
			<a asp-page="/post/Index" class="btn btn-secondary" style="width:150px">
					Back to List
			</a>
			</div>
		</div>
	</div>
</form>

@section Scripts{
	@{
		
	}
	<script>
		tinymce.init({
			selector: 'textarea',
			plugins: 'advlist autolink lists link image charmap print preview hr anchor pagebreak',
			toolbar_mode: 'floating',
		});

	
	</script>
}
